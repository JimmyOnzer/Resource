@page
@model WebClient.Pages.Bookings.BookingsModel
@{
}


<br />
<h2>Create New Resource</h2>

@if (Model.errorMessage.Length > 0)
{
	<div class='alert alert-warning alert-dismissible fade show' role='alert'>
		<strong>@Model.errorMessage</strong>
		<button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
	</div>
}

<form method="POST">
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Start Time:</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="startTime" value="@Model.bookingInfo.startTime">
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">End Time:</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="endTime" value="@Model.bookingInfo.endTime">
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Booked By:</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="bookedBy" value="@Model.bookingInfo.bookedBy">
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Capacity:</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="capacity" value="@Model.bookingInfo.purpose">
		</div>
	</div>

	@if (Model.successMessage.Length > 0)
	{
		<div class="row mb-3">
			<div class="col-sm-9">
				<div class='alert alert-warning alert-dismissible fade show' role='alert'>
					<strong>@Model.successMessage</strong>
					<button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
				</div>
			</div>
		</div>
	}

	<div class="row mb-3">
		<div class="offset-sm-3 col-sm-3 d-grid">
			<button type="submit" class="btn btn-primary">Submit</button>
		</div>
		<div class="col-sm-3 d-grid">
			<a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
		</div>
	</div>
</form>
